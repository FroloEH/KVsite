---
import { Img } from "astro-imagetools/components";
import Bars from "astro-heroicons/outline/Bars3.astro";
---

<div
  class="flex flex-row bg-slate-50/60 justify-between items-center shadow-sm p-2 absolute w-full min-h-10 md:min-h-24
  md:p-4">
  <div class="w-10 md:w-14 xl:w-16">
    <Img
      src="./LogoTransparent.png"
      alt="LOGO Kráľovstva - vínovy pohár s korunkou"
      placeholder="blurred"
    />
  </div>

  <div
    class="text-zinc-900 text-2xl font-display tracking-tighter
    bg-gradient-to-t from-yellow-500 to-yellow-500 bg-[length:100%_0.4rem] bg-no-repeat bg-[center_bottom_4px]
    md:text-5xl">
    <span
      class="p-3 pb-0 leading-none"
      >
      KRÁĽOVSTVO
    </span>
  </div>

  <Bars class="h-8 inline align-top mr-4 text-slate-800 stroke-2 xl:h-10" />
</div>


