---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<div
  class="m-2 rounded-lg bg-gradient-to-t from-amber-600 to-amber-400 px-6 py-4 
  drop-shadow-md transition-colors duration-300 hover:from-amber-600 hover:to-amber-500 hover:drop-shadow-lg">
  <a href={href} class="text-lg font-medium uppercase text-amber-50">
    {text}
  </a>
</div>
