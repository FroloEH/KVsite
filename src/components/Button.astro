---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a class="group relative inline-block focus:outline-none" href={href}>
  <span
    class="absolute inset-0 translate-x-1.5 translate-y-1.5 rounded-drawn bg-lime-800 transition-transform focus:bg-lime-500 group-hover:translate-x-0 group-hover:translate-y-0"
  ></span>

  <span
    class="relative inline-block rounded-drawn border-2 border-current px-8 py-3 text-sm font-bold uppercase tracking-widest text-amber-300 drop-shadow-lg hover:drop-shadow-none focus:border-amber-500 group-active:text-opacity-75">
    {text}
  </span>
</a>
