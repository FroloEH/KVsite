---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a
  class="group relative inline-block focus:outline-none focus:ring"
  href={href}>
  <span
    class="absolute inset-0 translate-x-1.5 translate-y-1.5 bg-amber-600 transition-transform group-hover:translate-x-0 group-hover:translate-y-0 rounded-drawn"
  ></span>

  <span
    class="relative inline-block border-2 rounded-drawn border-current px-8 py-3 text-sm font-bold uppercase tracking-widest text-emerald-50 group-active:text-opacity-75 drop-shadow-lg">
    {text}
  </span>
</a>
