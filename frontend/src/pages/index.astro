---
import Layout from '../layouts/Layout.astro'
import HeroImage from '../components/HeroImage.astro'
import UspCard from '../components/UspCards.astro'
import EventInfo from '../components/EventInfo.astro'
import Partners from '../components/Partners.astro'
import Team from '../components/Team.astro'
import * as content from '../content/pages/home.md'
import Gallery from '../components/shared/Gallery.astro'
---

<Layout title='LARP KRÁĽOVSTVO' socialImage={content.frontmatter.hero_image}>
  <HeroImage />
  <div class='mx-auto max-w-5xl bg-zinc-50 shadow-inner xl:px-10'>
    <UspCard />
    <EventInfo eventName={content.frontmatter.fight_event_name} />
    <EventInfo eventName={content.frontmatter.larp_event_name} />
    <Partners />
    <Team />
    <Gallery galleryName={content.frontmatter.gallery_collection} />
  </div>
</Layout>
