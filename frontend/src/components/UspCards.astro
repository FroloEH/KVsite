---
import * as content from '../content/pages/home.md'
import DynamicImage from './shared/DynamicImage.astro'
---

<section class='body-font text-gray-600'>
  <div class='container mx-auto py-12'>
    <div class='flex flex-row flex-wrap'>
      <div class='max-w-96 p-4 md:w-1/3'>
        <div
          class='h-full overflow-hidden rounded-xl border-2 border-amber-300 border-opacity-60 bg-zinc-100 shadow-md'>
          <DynamicImage
            class='w-full object-cover object-center shadow-inner md:h-36 lg:h-48'
            src={content.frontmatter.usp1_image}
            alt='blog'
          />
          <div class='p-6'>
            <h1 class='mb-3 text-2xl font-medium text-zinc-900'>
              {content.frontmatter.usp1_header}
            </h1>
            <p class='mb-3 leading-relaxed'>
              {content.frontmatter.usp1_text}
            </p>
          </div>
        </div>
      </div>

      <div class='max-w-96 p-4 md:w-1/3'>
        <div
          class='h-full overflow-hidden rounded-xl border-2 border-amber-300 border-opacity-60 bg-zinc-100 shadow-md'>
          <DynamicImage
            class='w-full object-cover object-center shadow-inner md:h-36 lg:h-48'
            src={content.frontmatter.usp2_image}
            alt='blog'
          />
          <div class='p-6'>
            <h1 class='mb-3 text-2xl font-medium text-zinc-900'>
              {content.frontmatter.usp2_header}
            </h1>
            <p class='mb-3 leading-relaxed'>
              {content.frontmatter.usp2_text}
            </p>
          </div>
        </div>
      </div>

      <div class='max-w-96 p-4 md:w-1/3'>
        <div
          class='h-full overflow-hidden rounded-xl border-2 border-amber-300 border-opacity-60 bg-zinc-100 shadow-md'>
          <DynamicImage
            class='w-full object-cover object-center shadow-inner md:h-36 lg:h-48'
            src={content.frontmatter.usp3_image}
            alt='blog'
          />
          <div class='p-6'>
            <h1 class='mb-3 text-2xl font-medium text-zinc-900'>
              {content.frontmatter.usp3_header}
            </h1>
            <p class='mb-3 leading-relaxed'>
              {content.frontmatter.usp3_text}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
