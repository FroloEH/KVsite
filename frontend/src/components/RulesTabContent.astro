---
import TextBlocksList from './shared/TextBlocksList.astro'
import StyledMarkdown from './shared/StyledMarkdown.astro'

interface Props {
  tabId: string
  intro: string
  blocks: { part_title: string; part_description: string }[]
}

const { tabId, intro, blocks } = Astro.props
---

<div
  class='tab-content relative'
  data-tab-index={tabId}
  role='tabpanel'
  aria-hidden='true'
  aria-labelledby={`tab-${tabId}`}
  id={`panel-${tabId}`}>
  <StyledMarkdown of={intro} />
  <TextBlocksList blocks={blocks} />
</div>

<style>
  .tab-content {
    display: none;
    visibility: hidden;
  }

  .tab-content.show {
    display: block;
    visibility: visible;
    &[aria-hidden='true'] {
      aria-hidden: false;
    }
  }
</style>
