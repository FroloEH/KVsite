---
import { getCollection } from 'astro:content'

const anouncments = await getCollection('anouncements', (anouncment) => anouncment.data.active)
---

{
  anouncments.map((anouncment) => (
    <div class='fixed inset-x-0 bottom-0 anouncment-banner'>
      <div class='relative flex items-center justify-between gap-4 bg-emerald-700 px-4 py-3 text-white'>
        <p class='text-sm font-medium'>
          {anouncment.data.text}
          <a class='pl-2 underline hover:text-yellow-400' href={anouncment.data.link} class='inline-block underline'>
            {anouncment.data.link_text}
          </a>
        </p>

        <button aria-label='Close' class='shrink-0 rounded-lg bg-black/10 p-1 transition hover:bg-black/20'>
          <svg xmlns='http://www.w3.org/2000/svg' class='size-5' viewBox='0 0 20 20' fill='currentColor'>
            <path
              fill-rule='evenodd'
              d='M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z'
              clip-rule='evenodd'
            />
          </svg>
        </button>
      </div>
    </div>
  ))
}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.anouncment-banner button').forEach((button) => {
      button.addEventListener('click', () => {
        if (!button.closest('.anouncment-banner')) {
          console.error('Button is not inside an anouncment banner')
          return
        }
        ;(button!.closest('.anouncment-banner') as HTMLElement)!.style.display = 'none'
      })
    })
  })
</script>
