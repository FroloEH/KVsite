---
import DynamicImage from './DynamicImage.astro'
import StyledMarkdown from './StyledMarkdown.astro'

interface Props {
  title: string
  text: string
  image: string
}

const { title, text, image } = Astro.props
---

<div class='max-w-96 p-4 md:w-1/3'>
  <div class='h-full overflow-hidden rounded-xl border-2 border-yellow-500 border-opacity-60 bg-zinc-100 shadow-md'>
    <DynamicImage
      class='w-full object-cover object-center shadow-inner md:h-36 lg:h-48'
      src={image}
      src={image}
      imageWidth={384}
    />
    <div class='p-6'>
      <h1 class='mb-3 text-2xl font-medium text-zinc-900'>
        {title}
      </h1>
      <p class='mb-3 leading-relaxed'>
        <StyledMarkdown of={text} />
      </p>
    </div>
  </div>
</div>
