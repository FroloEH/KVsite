---
import DynamicImage from './DynamicImage.astro'
import StyledMarkdown from './StyledMarkdown.astro'

interface Props {
  title: string
  text: string
  image: string
}

const { title, text, image } = Astro.props
---

<div class='max-w-96 p-4 md:w-1/3'>
  <div class='overflow-hidden rounded-xl border-2 border-yellow-500 border-opacity-60 bg-zinc-100 shadow-md'>
    <DynamicImage class='w-full object-cover object-center shadow-inner md:h-36 lg:h-48' src={image} />
    <details class='group p-6 [&_summary::-webkit-details-marker]:hidden'>
      <summary class='flex cursor-pointer items-center justify-between gap-1.5'>
        <h2 class='mb-3 text-2xl font-medium text-zinc-900'>
          {title}
        </h2>
        <span class='shrink-0 rounded-full bg-zinc-100 p-1.5 text-zinc-900 sm:p-3'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='size-5 shrink-0 transition duration-300 group-open:-rotate-45'
            viewBox='0 0 20 20'
            fill='currentColor'
          >
            <path
              fill-rule='evenodd'
              d='M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z'
              clip-rule='evenodd'></path>
          </svg>
        </span>
      </summary>

      <p class='mb-3 leading-relaxed'>
        <StyledMarkdown of={text} />
      </p>
    </details>
  </div>
</div>
